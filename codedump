  /* Positioned the down arrow at the bottom center of the first page */
  .down-symbol {
    position: absolute;
    bottom: 40px; /* Position above the bottom of the page */
    left: 50%; /* Center horizontally */
    transform: translateX(-50%);
    /* Ensuring the arrow is clickable over other elements */
    z-index: 1000;
  }
  
  .fa-chevron-down {
    font-size: 60px; /* Adjusted to a reasonable size */
    color: black;
    cursor: pointer;
    animation: bounce 2s infinite;
  }
  
  /* Keyframes for the bouncing arrow animation */
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-30px);
    }
    60% {
      transform: translateY(-15px);
    }
  }
  